<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TableRow>
        <EditText
            android:id="@+id/editNum1"
            android:hint="숫자 1"
            android:textSize="40dp"
            android:layout_span="4"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/editNum2"
            android:hint="숫자 2"
            android:textSize="40dp"
            android:layout_span="4"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="40dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="40dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="40dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="40dp"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="40dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="40dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="40dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="40dp"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="40dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:textSize="40dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnDot"
            android:text="."
            android:textSize="40dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnClear"
            android:text="C"
            android:textSize="40dp"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnAdd"
            android:text="더하기"
            android:textSize="40dp"
            android:layout_span="4"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnSub"
            android:text="빼기"
            android:textSize="40dp"
            android:layout_span="4"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnMul"
            android:text="곱하기"
            android:textSize="40dp"
            android:layout_span="4"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnDiv"
            android:text="나누기"
            android:textSize="40dp"
            android:layout_span="4"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/txtResult"
            android:text="계산결과 : "
            android:layout_span="4"
            android:textSize="40dp"
            android:textColor="#ff0000"/>
    </TableRow>

</TableLayout>