<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- com.kh.student.Student = 
		 new com.kh.student.Student(name, age, gradeNum, classNum); 
		 기본 생성자 Student() 없음 // 필드 생성자 가능
		 scope="prototype" : 매번 다른 객체
	-->
	<bean class="com.kh.student.Student" id="stu1" scope="prototype">
		<constructor-arg>
			<value>홍길동</value>
		</constructor-arg>
		<constructor-arg>
			<value>33</value>
		</constructor-arg>
		<constructor-arg>
			<value>3</value>
		</constructor-arg>
		<constructor-arg>
			<value>3</value>
		</constructor-arg>
	</bean>
	
	<bean class="com.kh.student.Student" id="stu2" scope="prototype">
		<constructor-arg>
			<value>고길동</value>
		</constructor-arg>
		<constructor-arg>
			<value>44</value>
		</constructor-arg>
		<constructor-arg>
			<value>4</value>
		</constructor-arg>
		<constructor-arg>
			<value>4</value>
		</constructor-arg>
	</bean>
	
	<!-- StudentInfo studentInfo = new StudentInfo();
		 studentInfo.setStudent(stu2);
	-->
	<bean class="com.kh.student.StudentInfo" id="studentInfo">
		<property name="student">
			<ref bean="stu2"/>
		</property>
	</bean>
</beans>
